<%- include('includes/head.ejs')  %>

  <body>
    <%- include('includes/navbar.ejs') %>

    <main>
      <% if (products.length > 0) { %>
      <div class="grid">
        <% for(let prod of products) { %>
          <article class="card product-item">
            <header class="card__header">
              <h1 class="product__title">Great Book</h1>
            </header>
            <div class="card__image">
              <img
                src="https://img.freepik.com/free-vector/hand-drawn-flat-design-stack-books-illustration_23-2149341898.jpg?w=360"
                alt="A Book"
              />
            </div>
            <div class="card__content">
              <h2 class="product__price">$19.99</h2>
              <p class="product__description">
                A very interesting book about so many even more interesting
                things!
              </p>
            </div>
            <div class="card__actions">
              <button class="btn">Add to Cart</button>
            </div>
          </article>
        <% } %>
      </div>
      <% } else {%>
        <h1>We don't have any products</h1>
      <% } %> 
    </main>
  </body>
</html>
